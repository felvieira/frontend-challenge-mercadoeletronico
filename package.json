    "vitest": "^2.1.8",
    "@vue/test-utils": "^2.4.6",
    "jsdom": "^25.0.1",
    "@vitest/coverage-v8": "^2.1.8",
    "playwright": "^1.49.1",
    "@playwright/test": "^1.49.1",
    "husky": "^9.1.7",
